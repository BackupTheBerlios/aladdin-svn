<?xml version="1.0"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<servlet>
		<servlet-name>I_NotificationService</servlet-name>
		<servlet-class>
			org.sweb.notification.remote.NotificationServiceOverWS
		</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>I_NotificationService</servlet-name>

		<url-pattern>/NSOWS</url-pattern>
	</servlet-mapping>
	
	  <ejb-local-ref>
		<ejb-ref-name>sweb/local/NotificationManager</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<local-home>java.lang.Object</local-home>
		<local>localhost.NotificationManager</local>
	</ejb-local-ref>
	<ejb-local-ref>
		<ejb-ref-name>sweb/local/EmailNotificationProducer</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<local-home>java.lang.Object</local-home>
		<local>localhost.EmailNotificationProducer</local>
	</ejb-local-ref>
	<ejb-local-ref>
		<ejb-ref-name>sweb/local/SMSNotificationProducer</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<local-home>java.lang.Object</local-home>
		<local>localhost.SMSNotificationProducer</local>
	</ejb-local-ref>
	<ejb-local-ref>
		<ejb-ref-name>sweb/local/SOAPNotificationProducer</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<local-home>java.lang.Object</local-home>
		<local>localhost.SOAPNotificationProducer</local>
	</ejb-local-ref>

</web-app>