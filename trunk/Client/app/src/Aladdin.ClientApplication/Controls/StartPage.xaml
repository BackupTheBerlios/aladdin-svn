<UserControl 
    x:Class="Aladdin.ClientApplication.Controls.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:Aladdin.ClientApplication"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource LargeButton}" Command="local:AppCommands.MoveToPageCommand" CommandParameter="MyTasksPage">
            <StackPanel>
                <TextBlock Margin="0 0 0 10">My tasks</TextBlock>
                <Image Source="../Resources/Images/clock.png" Height="48" />
            </StackPanel>
        </Button>
        <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource LargeButton}" Command="local:AppCommands.MoveToPageCommand" CommandParameter="SocialNetwork">
            <StackPanel>
                <TextBlock Margin="0 0 0 10">Social network</TextBlock>
                <Image Source="../Resources/Images/Users.png" Height="48" />
            </StackPanel>
        </Button>
        <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource LargeButton}"  Command="local:AppCommands.MoveToPageCommand" CommandParameter="ContactUsPage">
            <StackPanel>
                <TextBlock Margin="0 0 0 10">Contact us</TextBlock>
                <Image Source="../Resources/Images/ContactUs.png" Height="48" />
            </StackPanel>
        </Button>
        <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource LargeButton}" Command="local:AppCommands.MoveToPageCommand" CommandParameter="VideoPage">
            <StackPanel>
                <TextBlock Margin="0 0 0 10">ALADDIN TV</TextBlock>
                <Image Source="../Resources/Images/TV.png" Height="48" />
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
