<UserControl 
    x:Class="Aladdin.ClientApplication.Controls.MyTasksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Aladdin.ClientApplication"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Style="{StaticResource Heading1}">My tasks for today...</TextBlock>
        <StackPanel Orientation="Horizontal"  Grid.Row="1">
            <Button Style="{StaticResource MediumButton}" Command="local:AppCommands.MoveToPageCommand" CommandParameter="WizardPage">Fill the patient's questionnaire</Button>
            <Image Source="../Resources/Images/tick.ico" Height="48" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"  Grid.Row="2">
            <Button Style="{StaticResource MediumButton}">Fill the carer's questionnaire</Button>
            <Image Source="../Resources/Images/tick.ico" Height="48" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"  Grid.Row="3">
        <Button Style="{StaticResource MediumButton}" Command="local:AppCommands.MoveToPageCommand" CommandParameter="MeasureWeightBloodPage">Measure weight and blood pressure</Button>
            <Image Source="../Resources/Images/clock.png" Height="48" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"  Grid.Row="4">
        <Button Style="{StaticResource MediumButton}">Measure activity</Button>
            <Image Source="../Resources/Images/clock.png" Height="48" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"  Grid.Row="5">
        <Button Style="{StaticResource MediumButton}" Command="local:AppCommands.MoveToPageCommand" CommandParameter="PlayGame">Play games</Button>
        <Image Source="../Resources/Images/clock.png" Height="48" />
        </StackPanel>
    </Grid>
</UserControl>
