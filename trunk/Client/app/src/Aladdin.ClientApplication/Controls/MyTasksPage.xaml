<UserControl 
    x:Class="Aladdin.ClientApplication.Controls.MyTasksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Aladdin.ClientApplication"
    xmlns:controls="clr-namespace:Aladdin.ClientApplication.Controls"
    mc:Ignorable="d" Loaded="UserControl_Loaded">
    <Grid Background="{x:Null}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="20" Style="{StaticResource Heading1}" Text="{DynamicResource MyTasksForToday}"></TextBlock>
        <ScrollViewer Grid.Row="1">
            <StackPanel Grid.Row="1" Name="TaskPanel" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"/>
        </ScrollViewer>
    </Grid>
</UserControl>
