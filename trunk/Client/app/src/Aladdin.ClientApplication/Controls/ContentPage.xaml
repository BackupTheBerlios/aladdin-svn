<UserControl x:Class="Aladdin.ClientApplication.Controls.ContentPage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:player="clr-namespace:WpfYoutubePlayer;assembly=WpfYoutubePlayer"
             mc:Ignorable="d" MaxWidth="950" d:DesignWidth="950" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid MinHeight="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock MinWidth="800" Margin="0" Grid.Row="0" Grid.Column="0" Text="{Binding Title}" Style="{StaticResource QuetionnaireQuestionTitle}"/>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <Button Click="FullView_Click" Style="{StaticResource SmallButton}">
                    <Image Source="/Aladdin.ClientApplication;component/Resources/Images/fullview.png" Margin="10 2 10 6" Height="36" />
            </Button>
            <TextBlock Text=" "/>
            <Button Click="Button_Click" Style="{StaticResource SmallButton}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Aladdin.ClientApplication;component/Resources/Images/icon_tv.png" Margin="10 2 10 6" Height="36" />
                    <TextBlock Text="{DynamicResource Back}" Margin="0 8 10 6" />
                </StackPanel>
            </Button>
        </StackPanel>
        <Expander x:Name="WebPageExpander" HorizontalAlignment="Stretch" Margin="0 20 0 0" Grid.Row="1" Grid.ColumnSpan="2" Height="Auto" VerticalAlignment="Top" IsExpanded="True" IsEnabled="True">
            <!--<StackPanel x:Name="WebPageStack" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="0 20 0 0" Grid.Row="1" Grid.ColumnSpan="2" Height="Auto" VerticalAlignment="Top">-->
            <Border Height="Auto" VerticalAlignment="Top" Style="{StaticResource RoundBorder}">
                <StackPanel Orientation="Vertical" Margin="10">
                    <WebBrowser x:Name="WebBrowser" Margin="16" MinHeight="330" />
                </StackPanel>
            </Border>
            <!--</StackPanel>-->
        </Expander>
        <Expander x:Name="TextExpander" HorizontalAlignment="Stretch" Grid.Row="2" Grid.ColumnSpan="2" Height="Auto" VerticalAlignment="Top" IsExpanded="True" IsEnabled="True">
            <!--<StackPanel x:Name="TextStack" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="0 20 0 0" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Top">-->
            <Border Height="Auto" VerticalAlignment="Top" Style="{StaticResource RoundBorder}">
                <ScrollViewer Margin="10">
                    <StackPanel Orientation="Vertical" Margin="10" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" >
                        <TextBlock MinHeight="30" MaxHeight="420" Grid.Row="1" Text="{Binding Text}" FontSize="20" TextWrapping="Wrap" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <!--</StackPanel>-->
        </Expander>
    </Grid>
</UserControl>

