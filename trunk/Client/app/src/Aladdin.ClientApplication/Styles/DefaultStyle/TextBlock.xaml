<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type TextBlock}" BasedOn="{x:Null}" x:Key="Heading1">
        <Setter Property="Margin" Value="50"/>
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="{x:Type TextBlock}" BasedOn="{x:Null}" x:Key="QuetionnaireQuestionNumber">
        <Setter Property="FontSize" Value="24"/>
    </Style>

    <Style TargetType="{x:Type TextBlock}" BasedOn="{x:Null}" x:Key="QuetionnaireQuestionTitle">
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="Margin" Value="0, 20"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

</ResourceDictionary>